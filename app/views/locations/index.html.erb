<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th class="td">City</th>
      <th class="td">Lat</th>
      <th class="td">Lon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td class="td"><%= location.city %></td>
        <td class="td"><%= location.lat %></td>
        <td class="td"><%= location.lon %></td>
        <td class="td"><%= link_to 'Show', location %></td>
        <td class="td"><%= link_to 'Edit', edit_location_path(location) %></td>
        <td class="td"><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

